<%- include layout/header %>

<br/><br/>
<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <form action="" method="">
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" name="email" id="email" class="form-control" aria-describedby="emailHelp" placeholder="Email" value="<%= data.email%>" disabled required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="fullname">Fullname</label>
                <input type="text" name="fullname" id="fullname"  minlength="3" maxlength="40" class="form-control" value="<%= data.fullname%>" placeholder="Fullname" required>
            </div>
            <div class="form-group">
                <label for="age">Age</label>
                <input type="number" name="age" id="age" min="16" max="120" class="form-control" value="<%= data.age%>" placeholder="Age" required>
            </div>
            <input type="hidden" id="_id" value="<%=data._id%>" />
            <input type="button" class="btn btn-primary" id="btn_update" value="Submit"/>
            <button type="reset" class="btn btn-info">Reset</button>
            <a href="/" class="btn btn-warning">Home</a>
        </form>
    </div>
</div>

<%- include layout/footer %>